<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Top border -->

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/shopelia_titleBarTopBorder" />
        </shape>
    </item>

    <!-- Bottom border -->

    <item android:top="1dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/shopelia_titleBarBottomBorder" />
        </shape>
    </item>

    <!-- Content -->

    <item android:top="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shopelia_titleBarBackground"/>
        </shape>
    </item>

</layer-list>