<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shopelia_bg_green_button"
    android:foreground="@drawable/shopelia_btn_hover"
    android:paddingBottom="@dimen/shopelia_btn_vertical_margin"
    android:paddingLeft="@dimen/shopelia_btn_horizontal_margin"
    android:paddingRight="@dimen/shopelia_btn_horizontal_margin"
    android:paddingTop="@dimen/shopelia_btn_vertical_margin" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="@dimen/shopelia_margin_normal"
        android:paddingRight="@dimen/shopelia_margin_normal" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/shopelia_margin_normal"
            android:src="@drawable/shopelia_cart_white" />

        <com.shopelia.android.widget.FontableTextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Valider"
            android:textColor="@color/shopelia_validation_button_text_color"
            android:textSize="@dimen/shopelia_font_size_normal" />

    </LinearLayout>

</FrameLayout>