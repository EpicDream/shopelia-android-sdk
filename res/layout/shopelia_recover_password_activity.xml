<?xml version="1.0" encoding="utf-8"?>
<com.shopelia.android.widget.form.FormLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/shopelia_margin_large"
    android:paddingRight="@dimen/shopelia_margin_large" >

    <com.shopelia.android.widget.form.HeaderField
        android:id="@+id/headerField1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shopelia_icon="@drawable/shopelia_lock"
        app:shopelia_text="@string/shopelia_recover_password_title" >
    </com.shopelia.android.widget.form.HeaderField>

    <com.shopelia.android.widget.FontableTextView
        android:id="@+id/fontableTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/shopelia_margin_large"
        android:layout_marginLeft="@dimen/shopelia_margin_normal"
        android:layout_marginRight="@dimen/shopelia_margin_normal"
        android:layout_marginTop="@dimen/shopelia_margin_large"
        android:gravity="center"
        android:text="@string/shopelia_recover_password_description"
        android:textSize="@dimen/shopelia_font_size_small" />

    <com.shopelia.android.widget.form.EmailField
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shopelia_hint="@string/shopelia_recover_password_email" >
    </com.shopelia.android.widget.form.EmailField>

    <com.shopelia.android.widget.FontableTextView
        android:id="@+id/error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/shopelia_margin_none"
        android:layout_marginLeft="@dimen/shopelia_margin_extra_small"
        android:layout_marginRight="@dimen/shopelia_margin_extra_small"
        android:layout_marginTop="@dimen/shopelia_margin_large"
        android:gravity="center"
        android:textColor="@color/shopelia_red"
        android:textSize="@dimen/shopelia_font_size_small"
        android:visibility="gone" />

    <com.shopelia.android.widget.ValidationButton
        android:id="@+id/validate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/shopelia_margin_extra_large"
        android:layout_marginTop="@dimen/shopelia_margin_extra_large"
        app:shopelia_text="@string/shopelia_recover_password_send" >
    </com.shopelia.android.widget.ValidationButton>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/shopelia_include_footer" />

</com.shopelia.android.widget.form.FormLinearLayout>