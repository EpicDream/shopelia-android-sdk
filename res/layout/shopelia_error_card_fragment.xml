<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/shopelia_margin_normal"
    android:layout_marginRight="@dimen/shopelia_margin_normal"
    android:background="@drawable/shopelia_card_background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/shopelia_margin_large"
    android:paddingLeft="@dimen/shopelia_margin_large"
    android:paddingRight="@dimen/shopelia_margin_large"
    android:paddingTop="@dimen/shopelia_margin_large" >

    <FrameLayout
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/error_message"
        android:layout_marginTop="@dimen/shopelia_margin_large"
        android:background="@drawable/shopelia_bg_red_button"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/shopelia_btn_hover" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <com.shopelia.android.widget.FontableTextView
                android:id="@+id/back_button_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/shopelia_margin_normal"
                android:text="@string/shopelia_error_default_back_message"
                android:textColor="@color/shopelia_white"
                android:textSize="@dimen/shopelia_font_size_medium" />

        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/shopelia_ic_error_logo" />

    <com.shopelia.android.widget.FontableTextView
        android:id="@+id/error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="@dimen/shopelia_margin_large"
        android:gravity="center_horizontal"
        android:text="Produit absent"
        android:textSize="@dimen/shopelia_font_size_mid_large"
        />

</RelativeLayout>