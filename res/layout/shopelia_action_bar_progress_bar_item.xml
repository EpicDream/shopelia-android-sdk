<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:context=".app.ShopeliaActivity" >

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="28dp"
        android:layout_height="wrap_content" />

    <com.shopelia.android.widget.FontableTextView
        android:id="@+id/action_bar_item_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="@dimen/shopelia_margin_small"
        android:paddingRight="@dimen/shopelia_margin_large"
        android:text="Veuillez patienter..."
        android:textColor="@color/shopelia_light"
        android:textSize="@dimen/shopelia_font_size_small"
        app:shopelia_fontFamily="normal"
        app:shopelia_fontStyle="normal" />

</LinearLayout>