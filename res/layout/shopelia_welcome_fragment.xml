<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingBottom="@dimen/shopelia_activity_vertical_margin"
        android:paddingLeft="@dimen/shopelia_activity_horizontal_margin"
        android:paddingRight="@dimen/shopelia_activity_horizontal_margin"
        android:paddingTop="@dimen/shopelia_activity_vertical_margin" >

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/shopelia_product_sheet" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/shopelia_activity_vertical_margin"
            android:paddingTop="@dimen/shopelia_activity_vertical_margin" >

            <com.shopelia.android.widget.ValidationButton
                android:id="@+id/validationButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shopelia_icon="@drawable/shopelia_cart_white"
                app:shopelia_text="Continuer sur Amazon France" >
            </com.shopelia.android.widget.ValidationButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/shopelia_margin_large"
            android:layout_marginLeft="@dimen/shopelia_margin_large"
            android:layout_marginRight="@dimen/shopelia_margin_large"
            android:layout_marginTop="@dimen/shopelia_margin_large"
            android:gravity="center" >

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="50"
                android:background="@color/shopelia_dark_translucent_60" />

            <com.shopelia.android.widget.FontableTextView
                android:id="@+id/fontableTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/shopelia_margin_normal"
                android:layout_marginRight="@dimen/shopelia_margin_normal"
                android:text="OU"
                android:textSize="@dimen/shopelia_font_size_small" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="50"
                android:background="@color/shopelia_dark_translucent_60" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/shopelia_activity_vertical_margin" >

            <LinearLayout
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/shopelia_margin_large"
                android:orientation="vertical" >
            </LinearLayout>

            <com.shopelia.android.widget.ValidationButton
                android:id="@+id/validationButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:shopelia_icon="@drawable/shopelia_cart_white"
                app:shopelia_text="Utiliser shopelia" >
            </com.shopelia.android.widget.ValidationButton>
        </LinearLayout>
    </LinearLayout>

</ScrollView>