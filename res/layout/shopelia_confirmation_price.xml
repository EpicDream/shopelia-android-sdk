<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/price_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.shopelia.android.widget.FontableTextView
        android:id="@+id/product_informations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/shopelia_margin_normal"
        android:layout_marginTop="@dimen/shopelia_margin_normal"
        android:gravity="left"
        android:text="Taille 42 en noir et rouge"
        android:textColor="@color/shopelia_dark"
        android:textSize="@dimen/shopelia_font_size_normal" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/shopelia_margin_small"
        android:layout_marginTop="@dimen/shopelia_margin_small" >

        <com.shopelia.android.widget.FontableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/shopelia_margin_normal"
            android:text="@string/shopelia_product_quantity"
            android:textColor="@color/shopelia_dark"
            android:textSize="@dimen/shopelia_font_size_normal" />

        <com.shopelia.android.widget.FontableTextView
            android:id="@+id/product_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="42"
            android:textColor="@color/shopelia_dark_blue"
            android:textSize="@dimen/shopelia_font_size_normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/shopelia_margin_small" >

        <com.shopelia.android.widget.FontableTextView
            android:id="@+id/price_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/shopelia_margin_normal"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Produit"
            android:textColor="@color/shopelia_dark"
            android:textSize="@dimen/shopelia_font_size_normal" />

        <com.shopelia.android.widget.FontableTextView
            android:id="@+id/product_quantity_multiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="42 x"
            android:textColor="@color/shopelia_dark_blue"
            android:textSize="@dimen/shopelia_font_size_normal" />

        <com.shopelia.android.widget.FontableTextView
            android:id="@+id/price_value_no_shipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/shopelia_margin_small"
            android:gravity="right"
            android:text="12.89€"
            android:textColor="@color/shopelia_dark_green"
            android:textSize="@dimen/shopelia_font_size_normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/shopelia_margin_small"
        android:layout_marginTop="@dimen/shopelia_margin_small" >

        <com.shopelia.android.widget.FontableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/shopelia_margin_normal"
            android:text="@string/shopelia_confirmation_shipping_fees"
            android:textColor="@color/shopelia_dark"
            android:textSize="@dimen/shopelia_font_size_normal" />

        <com.shopelia.android.widget.FontableTextView
            android:id="@+id/price_value_shipping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="2,79€"
            android:textColor="@color/shopelia_dark_green"
            android:textSize="@dimen/shopelia_font_size_normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/price_cashfront_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shopelia_margin_small" >

        <com.shopelia.android.widget.FontableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/shopelia_margin_normal"
            android:text="@string/shopelia_confirmation_cashfront"
            android:textColor="@color/shopelia_dark"
            android:textSize="@dimen/shopelia_font_size_normal" />

        <com.shopelia.android.widget.FontableTextView
            android:id="@+id/price_cashfront"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="2,79€"
            android:textColor="@color/shopelia_dark_blue"
            android:textSize="@dimen/shopelia_font_size_normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shopelia_margin_normal" >

        <com.shopelia.android.widget.FontableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/shopelia_margin_normal"
            android:text="@string/shopelia_confirmation_total_price"
            android:textColor="@color/shopelia_dark"
            android:textSize="@dimen/shopelia_font_size_large"
            app:shopelia_fontStyle="bold" />

        <com.shopelia.android.widget.FontableTextView
            android:id="@+id/price_value_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="15.68€"
            android:textColor="@color/shopelia_dark_green"
            android:textSize="@dimen/shopelia_font_size_huge"
            app:shopelia_fontStyle="normal" />
    </LinearLayout>

    <com.shopelia.android.widget.FontableTextView
        android:id="@+id/price_shipping_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shopelia_margin_normal"
        android:gravity="right"
        android:text="Livraison 24h"
        android:textSize="@dimen/shopelia_font_size_small" />

    <CheckBox
        android:id="@+id/auto_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commande de test"
        android:visibility="gone" />

</LinearLayout>