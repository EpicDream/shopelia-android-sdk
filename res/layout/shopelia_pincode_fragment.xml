<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/shopelia_margin_large"
    android:paddingRight="@dimen/shopelia_margin_large" >

    <include
        android:id="@+id/header_frame"
        layout="@layout/shopelia_form_field_title_header" />

    <com.shopelia.android.widget.FontableTextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shopelia_margin_extra_large"
        android:gravity="center"
        android:text="@string/shopelia_pincode_description_create"
        android:textColor="@color/shopelia_dark"
        android:textSize="@dimen/shopelia_font_size_small" />

    <com.shopelia.android.widget.NumberInput
        android:id="@+id/numberInput"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/shopelia_margin_extra_small"
        android:layout_marginRight="@dimen/shopelia_margin_extra_small"
        android:layout_marginTop="40dp"
        android:background="@android:color/transparent"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:textIsSelectable="false"
        app:shopelia_number_background="@drawable/shopelia_field" >
    </com.shopelia.android.widget.NumberInput>

    <com.shopelia.android.widget.FontableTextView
        android:id="@+id/error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/shopelia_margin_none"
        android:layout_marginLeft="@dimen/shopelia_margin_extra_small"
        android:layout_marginRight="@dimen/shopelia_margin_extra_small"
        android:layout_marginTop="@dimen/shopelia_margin_large"
        android:gravity="center"
        android:text="FontableTextView"
        android:textColor="@color/shopelia_red"
        android:textSize="@dimen/shopelia_font_size_small"
        android:visibility="invisible" />

     <com.shopelia.android.widget.FontableTextView
        android:id="@+id/forgotPincode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shopelia_margin_normal"
        android:gravity="center"
        android:text="@string/shopelia_pincode_forgotten"
        android:textColor="@color/shopelia_link_text_color"
        android:textSize="@dimen/shopelia_font_size_small"
        app:shopelia_fontFamily="normal"
        app:shopelia_fontStyle="normal"
        android:autoLink="all"
        android:linksClickable="false"
        android:padding="@dimen/shopelia_margin_small"
        android:layout_marginBottom="@dimen/shopelia_margin_normal" />
    
</LinearLayout>